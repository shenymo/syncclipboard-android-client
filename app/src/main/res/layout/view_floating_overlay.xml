<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floating_overlay_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/floating_overlay_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_overlay_outline"
        android:clipToOutline="true">

        <View
            android:id="@+id/floating_overlay_blur_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_overlay_fill" />

        <LinearLayout
            android:id="@+id/floating_overlay_content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp">

        <FrameLayout
            android:id="@+id/floating_overlay_icon_container"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/floating_overlay_icon_upload"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/ic_qs_upload" />

            <ImageView
                android:id="@+id/floating_overlay_icon_download"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/ic_qs_download" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/floating_overlay_text_container"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/floating_overlay_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/floating_overlay_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/floating_overlay_conflict_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/floating_overlay_btn_replace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:text="@string/button_replace" />

                <Button
                    android:id="@+id/floating_overlay_btn_rename_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:minHeight="36dp"
                    android:text="@string/button_rename_save" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/floating_overlay_result_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/floating_overlay_btn_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="36dp"
                    android:text="@string/button_open_file" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </FrameLayout>
</FrameLayout>
