<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 访问 SyncClipboard 服务器需要网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 悬浮窗（在其他应用上层显示）权限：属于特殊权限，需要引导用户到系统设置开启 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 前台服务：用于在后台稳定执行上传/下载并展示悬浮窗进度 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:name=".SyncClipboardApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SyncClipboard"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".SettingsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ProgressActivity"
            android:exported="true"
            android:theme="@style/Theme.SyncClipboard.Dialog"
            android:excludeFromRecents="true"
            android:taskAffinity="com.example.syncclipboard.qs" />

        <activity
            android:name=".ClipboardBridgeActivity"
            android:exported="false"
            android:theme="@style/Theme.SyncClipboard.TransparentHost"
            android:excludeFromRecents="true"
            android:taskAffinity="com.example.syncclipboard.qs" />

        <activity
            android:name=".ShareReceiveActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="image/*" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>

        <service
            android:name=".UploadClipboardTileService"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true"
            android:icon="@drawable/ic_qs_upload"
            android:label="@string/tile_upload_title">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <meta-data
                android:name="android.service.quicksettings.TITLE"
                android:value="@string/tile_upload_title" />
        </service>

        <service
            android:name=".DownloadClipboardTileService"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true"
            android:icon="@drawable/ic_qs_download"
            android:label="@string/tile_download_title">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <meta-data
                android:name="android.service.quicksettings.TITLE"
                android:value="@string/tile_download_title" />
        </service>

        <service
            android:name=".FloatingOverlayService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

    </application>

</manifest>
